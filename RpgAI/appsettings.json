{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Buried": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Buried System Character Sheet",
    "version": "1.0",
    "description": "Schema for validating a player character in the Buried RPG system.",
    "type": "object",
    "required": [
      "Name",
      "Class",
      "Backstory",
      "Attributes",
      "ClassSkill",
      "Skills",
      "Stats",
      "Equipment"
    ],
    "properties": {
      "Name": {
        "type": "string",
        "minLength": 1
      },
      "Backstory": {
        "type": "string",
        "maxLength": 5000,
        "description": "Narrative history of the character."
      },
      "Class": {
        "type": "string",
        "enum": [
          "Detective",
          "Medic",
          "Soldier",
          "Psychologist"
        ],
        "description": "The archetype defining the character's specialized training."
      },
      "Attributes": {
        "type": "object",
        "required": [ "Body", "Mind", "Courage" ],
        "properties": {
          "Body": { "type": "integer", "minimum": 1, "maximum": 6 },
          "Mind": { "type": "integer", "minimum": 1, "maximum": 6 },
          "Courage": { "type": "integer", "minimum": 1, "maximum": 6 }
        },
        "additionalProperties": false
      },
      "ClassSkill": {
        "type": "object",
        "required": [ "Name", "Description", "Rank" ],
        "properties": {
          "Name": { "type": "string" },
          "Description": { "type": "string" },
          "Rank": {
            "type": "integer",
            "minimum": 1,
            "maximum": 3,
            "description": "Determines frequency of use."
          }
        }
      },
      "Stats": {
        "type": "object",
        "required": [ "Health", "Initiative", "Sanity", "CarryWeight" ],
        "properties": {
          "Health": {
            "type": "object",
            "required": [ "Current", "Max" ],
            "properties": {
              "Current": { "type": "integer", "minimum": 0 },
              "Max": { "type": "integer", "description": "Formula: 10 * Attributes.Body" }
            }
          },
          "Initiative": {
            "type": "integer",
            "description": "Formula: 10 * Attributes.Courage"
          },
          "Sanity": {
            "type": "object",
            "required": [ "Current", "Max" ],
            "properties": {
              "Current": { "type": "integer", "minimum": 0 },
              "Max": { "type": "integer", "description": "Formula: 10 * Attributes.Mind" }
            }
          },
          "CarryWeight": {
            "type": "object",
            "required": [ "Current", "Max" ],
            "properties": {
              "Current": { "type": "number", "minimum": 0, "description": "Sum of (Equipment.Weight * Equipment.Quantity)" },
              "Max": { "type": "integer", "description": "Formula: 10 * Attributes.Body" }
            }
          }
        }
      },
      "Skills": {
        "type": "object",
        "required": [ "Body", "Mind", "Courage" ],
        "properties": {
          "Body": {
            "type": "object",
            "properties": {
              "Athletics": { "type": "integer", "minimum": 0, "maximum": 6 },
              "Melee combat": { "type": "integer", "minimum": 0, "maximum": 6 },
              "Survival": { "type": "integer", "minimum": 0, "maximum": 6 },
              "Intimidation": { "type": "integer", "minimum": 0, "maximum": 6 }
            },
            "additionalProperties": false
          },
          "Mind": {
            "type": "object",
            "properties": {
              "Science": { "type": "integer", "minimum": 0, "maximum": 6 },
              "Perception": { "type": "integer", "minimum": 0, "maximum": 6 },
              "Intelligence": { "type": "integer", "minimum": 0, "maximum": 6 },
              "First aid": { "type": "integer", "minimum": 0, "maximum": 6 }
            },
            "additionalProperties": false
          },
          "Courage": {
            "type": "object",
            "properties": {
              "Guns": { "type": "integer", "minimum": 0, "maximum": 6 },
              "Persuasion": { "type": "integer", "minimum": 0, "maximum": 6 },
              "Dodge": { "type": "integer", "minimum": 0, "maximum": 6 },
              "Stealth": { "type": "integer", "minimum": 0, "maximum": 6 }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      },
      "Equipment": {
        "type": "array",
        "items": {
          "type": "object",
          "required": [ "Name", "MechanicalEffect" ],
          "properties": {
            "Name": { "type": "string" },
            "Description": {
              "type": "string",
              "description": "Narrative flavor text (e.g. 'A rusted iron key')."
            },
            "MechanicalEffect": {
              "type": "string",
              "description": "Explicit rules definition for the LLM Judge. E.g., 'Damage: 2d6', 'Reduces darkness penalty by 5', 'Heals 2d6 HP'. Used to validate against the Rulebook."
            },
            "Quantity": { "type": "integer", "default": 1, "minimum": 1 },
            "Weight": { "type": "number", "default": 0, "minimum": 0 }
          }
        }
      }
    },
    "allOf": [
      {
        "if": { "properties": { "Class": { "const": "Detective" } } },
        "then": {
          "properties": {
            "ClassSkill": {
              "properties": {
                "Name": { "const": "Deduction" }
              }
            }
          }
        }
      },
      {
        "if": { "properties": { "Class": { "const": "Medic" } } },
        "then": {
          "properties": {
            "ClassSkill": {
              "properties": {
                "Name": { "const": "Surgery" }
              }
            }
          }
        }
      },
      {
        "if": { "properties": { "Class": { "const": "Soldier" } } },
        "then": {
          "properties": {
            "ClassSkill": {
              "properties": {
                "Name": { "const": "PTSD" }
              }
            }
          }
        }
      },
      {
        "if": { "properties": { "Class": { "const": "Psychologist" } } },
        "then": {
          "properties": {
            "ClassSkill": {
              "properties": {
                "Name": { "const": "Psychoanalysis" }
              }
            }
          }
        }
      }
    ],
    "additionalProperties": false
  }
}